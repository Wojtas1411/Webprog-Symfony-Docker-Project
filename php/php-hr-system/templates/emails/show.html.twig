{% extends 'base.html.twig' %}

{% block title %}Emails{% endblock %}

{% block body %}
    <h1>Emails</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ email.id }}</td>
            </tr>
            <tr>
                <th>Family Name</th>
                <td>{{ email.FamilyName }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ email.FirstName }}</td>
            </tr>
            <tr>
                <th>Prim</th>
                <td>{{ email.prim ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ email.Value }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('emails_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('emails_edit', {'id': email.id}) }}" class="btn btn-primary">edit</a>

    {{ include('emails/_delete_form.html.twig') }}
{% endblock %}
