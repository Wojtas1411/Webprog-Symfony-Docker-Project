{% block title %}PhoneNumbers{% endblock %}

{% block body %}
    <h1>PhoneNumbers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ phone_number.id }}</td>
            </tr>
            <tr>
                <th>Family Name</th>
                <td>{{ phone_number.FamilyName }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ phone_number.FirstName }}</td>
            </tr>
            <tr>
