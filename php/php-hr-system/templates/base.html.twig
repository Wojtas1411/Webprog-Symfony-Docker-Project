    <div class="jumbotron jumbotron-fluid align-bottom">
        <div class="container">
            <center>
                <p>I don't know what to place here yet</p>
            </center>

            <center>
                <small>
                    <p class="font-italic">Developed by Wojciech Taisner 2018</p>
                </small>
            </center>

        </div>
    </div>


        {% block javascripts %}{% endblock %}
    </body>
</html>
