            </li>
            {% endif %}
            {% if is_granted('ROLE_HR') %}
            <li class="nav-item">
                <a class="nav-link" href="/personal/data">Personal Data</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/job/data">Job Data</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/adres">Adresses</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/emails">Emails</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/phone/numbers">Phone Numbers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/units">Units</a>
            </li>
            <li class="nav-item">
