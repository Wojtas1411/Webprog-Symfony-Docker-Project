            <li class="nav-item">
                <a class="nav-link" href="/membership">Membership</a>
            </li>
            {% endif %}
            <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
            </li>
            <!--
            <li class="nav-item">
                <a class="nav-link disabled" href="#">Disabled</a>
            </li>
            <!---->
        </ul>
    </nav>

    {% endif %}

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            {% block body %}Hello there!{% endblock %}
        </div>
    </div>


