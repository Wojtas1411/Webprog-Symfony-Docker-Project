{% extends 'base.html.twig' %}

{% block title %}Engagement index{% endblock %}

{% block body %}
    <h1>Engagement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Employee</th>
                <th>Position</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for engagement in engagements %}
            <tr>
                <td>{{ engagement.id }}</td>
                <td>{{ engagement.Person.FamilyName }} {{ engagement.Person.FirstName }}</td>
                <td>{{ engagement.StaffCategory.Name }}</td>
                <td>
                    <a href="{{ path('engagement_show', {'id': engagement.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('engagement_edit', {'id': engagement.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('engagement_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
